{
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint -- --fix",
		"typecheck": "turbo typecheck",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"ui:add": "pnpm --filter @cloudcrafter/ui ui:add",
		"generate-clients": "pnpm --filter @cloudcrafter/api generate-clients",
		"format-and-lint": "biome check .",
		"format-and-lint:fix": "biome check . --write",
		"format-and-lint:hook": "biome check --write --staged --files-ignore-unknown=true --no-errors-on-unmatched  && git update-index --again",
		"test:e2e": "pnpm --filter @cloudcrafter/e2e-testing test",
		"test:e2e:ui": "pnpm --filter @cloudcrafter/e2e-testing test:ui",
		"test:e2e:debug": "pnpm --filter @cloudcrafter/e2e-testing test:debug",
		"test:e2e:report": "pnpm --filter @cloudcrafter/e2e-testing test:report"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"prettier": "^3.2.5",
		"turbo": "^2.4.4"
	},
	"packageManager": "pnpm@8.15.6",
	"name": "with-vite"
}
