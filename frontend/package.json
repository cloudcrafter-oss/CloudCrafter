{
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint -- --fix",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"ui:add": "pnpm --filter @repo/ui ui:add",
		"web:generate-clients": "pnpm --filter cloudcrafter-frontend generate-clients",
		"format-and-lint": "biome check .",
		"format-and-lint:fix": "biome check . --write",
		"format-and-lint:hook": "biome check --write --staged --files-ignore-unknown=true --no-errors-on-unmatched  && git update-index --again"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"prettier": "^3.2.5",
		"turbo": "^2.1.1"
	},
	"packageManager": "pnpm@8.15.6",
	"name": "with-vite"
}
