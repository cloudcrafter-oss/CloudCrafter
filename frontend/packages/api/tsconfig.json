{
	"extends": "@cloudcrafter/typescript-config/nextjs.json",
	"compilerOptions": {
		"baseUrl": ".",
		"noEmit": true,
		"target": "ES2015",
		"esModuleInterop": true,
		"strict": true,
		"lib": ["ES2015", "DOM"]
	},
	"include": [
		"next-env.d.ts",
		"next.config.js",
		"src",
		"**/*.ts",
		"*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules", "dist"]
}
