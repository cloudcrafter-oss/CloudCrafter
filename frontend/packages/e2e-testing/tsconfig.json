{
	"extends": "@cloudcrafter/typescript-config/nextjs.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		],
		"moduleResolution": "node",
		"module": "esnext",
		"esModuleInterop": true,
		"paths": {
			"@/*": ["./*"],
			"auth": ["./auth"]
		}
	},
	"include": [
		"next-env.d.ts",
		"next.config.js",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
